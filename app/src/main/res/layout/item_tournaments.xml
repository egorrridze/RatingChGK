<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tournament_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:layout_marginBottom="8dp"
        android:gravity="center_vertical"
        android:text="Team (Moscow)" />

    <TextView
        android:id="@+id/tournament_date"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center"
        android:text="21.05.2020" />

    <TextView
        android:id="@+id/tournament_type"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="А" />

    <!--<TextView
        android:id="@+id/tournament_quest_num"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_toEndOf="@id/tournament_type"
        android:text="144" />

    <TextView
        android:id="@+id/tournament_dl"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_toEndOf="@id/tournament_quest_num"
        android:text="{3,4}" />-->

</LinearLayout>